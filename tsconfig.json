{
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"sourceMap": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"configs/*": ["./configs/*"],
			"controllers/*": ["./controllers/*"],
			"middlewares/*": ["./middlewares/*"],
			"models/*": ["./models/*"],
			"routes/*": ["./routes/*"],
			"services/*": ["./services/*"],
			"utils/*": ["./utils/*"]
		}
	},
	"exclude": ["./node_modules"]
}
